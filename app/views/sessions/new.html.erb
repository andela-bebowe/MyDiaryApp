<%provide(:title, 'Log In')%>

<div class="container ">
	<div class="form-wrapper">
		<h2>Log In</h2>
		<%= form_for :session, url: login_path do |f|%>

			<div class="form-group">
				<%= f.label :email%>
				<%= f.email_field :email, placeholder: "Enter email" , class: "form-control"%>
			</div>

			<div class="form-group">
				<%= f.label :password%>
				<%= f.password_field :password, placeholder: "Enter password" , class: "form-control"%>
			</div>

			<div class="form-group">
			<%= f.submit "Open MyDiary", class: "btn btn-primary form-control" %>
			</div>
		<% end %>
		
		<p id="login-join">New here? <%=link_to "Join up!", signup_path%></p>
	</div>
</div>
	